= form_for menu do |f|
  - if menu.errors.any?
    #error-explanation
      %h2
        #{pluralize(menu.errors.count, "error")} prohibited this menu from being saved:
      %ul
        - menu.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :price
    = f.number_field :price
  .actions
    = f.submit "Save"
